@page
@model MATruck.UI.Pages.Admin.BrokerModel
@{
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>E-commerce product list</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="" asp-page="/Admin/Index"><i class="fa fa-server"></i> <span class="nav-label">Admin Index</span></a>
            </li>
            <li class="breadcrumb-item">
                <a>E-commerce</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Product list</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div id="app" class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom" v-if="editing">
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="brokerModel.brokerName" type="text" placeholder="Name" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="brokerModel.description" type="text" placeholder="Description" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="brokerModel.email" type="text" placeholder="Email" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="brokerModel.phone1" type="text" placeholder="Phone 1" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="brokerModel.phone2" type="text" placeholder="Phone 2" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <select v-model="brokerModel.status" class="form-control">
                        <option value="Active" selected>Active</option>
                        <option value="Disabled">Disabled</option>
                        <option value="StandBy">StandBy</option>
                        <option value="Deleted">Deleted</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="brokerModel.address1" type="text" placeholder="Address" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="brokerModel.city" type="text" placeholder="City" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="brokerModel.state" type="text" placeholder="State" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="brokerModel.zipCode" type="text" placeholder="ZipCode" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <button class="btn btn-w-m btn-primary" @@click="createBroker" v-if="!brokerModel.id">Create Broker</button>
            <button class="btn btn-w-m btn-primary" @@click="updateBroker" v-else>Update Broker</button>
            <button class="btn btn-w-m btn-default" @@click="cancel">Cancel</button>
        </div>

    </div>

    <div class="row" v-if="!editing">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <button class="btn btn-default" @@click="newBroker">Add New Broker</button>
                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>
                                <th data-toggle="true">Broker Name</th>
                                <th data-hide="phone">Email</th>
                                <th data-hide="all">Description</th>
                                <th data-hide="phone">Phone</th>
                                <th data-hide="phone,tablet">State</th>
                                <th data-hide="phone">Status</th>
                                <th class="text-right" data-sort-ignore="true">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="(broker, index) in brokers">
                                <td>
                                    {{broker.brokerName}}
                                </td>
                                <td>
                                    {{broker.email}}
                                </td>
                                <td>
                                    {{broker.description}}
                                </td>
                                <td>
                                    {{broker.phone1}}
                                </td>
                                <td>
                                    {{broker.state}}
                                </td>
                                <td>
                                    <span class="label label-primary">{{broker.status}}</span>
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <button class="btn-white btn btn-xs" @@click="editBroker(broker.id, index)">Edit</button>
                                        <button class="btn-white btn btn-xs" @@click="deleteBroker(broker.id, index)">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/admin/main.js"></script>

}


