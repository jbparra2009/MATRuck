@model MATruck.UI.Pages.Admin.FactoryModel
@{
}

<div id="app" class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row" v-if="editing" >
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li><a class="nav-link active" data-toggle="tab" href="#tab-1"> Factory info</a></li>
                    <li><a class="nav-link" data-toggle="tab" href="#tab-2"> Data</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            <fieldset>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Name:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.name" type="text" placeholder="Factory Name" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Description:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.description" type="text" placeholder="Description" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Email:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.email" type="text" placeholder="Email" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Phone:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.phone1" type="text" placeholder="Phone" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Rate:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.rate" type="text" placeholder="Rate" class="form-control">
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div id="tab-2" class="tab-pane">
                        <div class="panel-body">
                            <fieldset>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Address:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.address1" type="text" placeholder="Address" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">city:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.city" type="text" placeholder="city" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">state:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.state" type="text" placeholder="state" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">zipCode:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.zipCode" type="text" placeholder="zipCode" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Status:</label>
                                    <div class="col-sm-10">
                                        <select v-model="factoryModel.status" class="form-control">
                                            <option value="Active" selected>Active</option>
                                            <option value="Disabled">Disabled</option>
                                            <option value="StandBy">StandBy</option>
                                            <option value="Deleted">Deleted</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <button class="btn btn-w-m btn-primary" @@click="createFactory" v-if="!factoryModel.id">Create Factory</button>
                                    <button class="btn btn-w-m btn-primary" @@click="updateFactory" v-else>Update Factory</button>
                                    <button class="btn btn-w-m btn-default" @@click="cancel">Cancel</button>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



