@page
@model MATruck.UI.Pages.Admin.DispatchModel
@{
}

<div id="app" class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom" v-if="editing">
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.firstName" type="text" placeholder="firstName" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.lastName" type="text" placeholder="lastName" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.description" type="text" placeholder="description" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.email" type="text" placeholder="email" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.phone1" type="text" placeholder="Phone 1" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <select v-model="dispatchModel.status" class="form-control">
                        <option value="Active" selected>Active</option>
                        <option value="Disabled">Disabled</option>
                        <option value="StandBy">StandBy</option>
                        <option value="Deleted">Deleted</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.phone2" type="text" placeholder="phone2" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.rate" type="text" placeholder="rate" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.address1" type="text" placeholder="address1" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.address2" type="text" placeholder="address2" class="form-control">
                </div>
            </div>
            <div class="col-sm-1">
                <div class="form-group">
                    <input v-model="dispatchModel.city" type="text" placeholder="city" class="form-control">
                </div>
            </div>
            <div class="col-sm-1">
                <div class="form-group">
                    <input v-model="dispatchModel.state" type="text" placeholder="state" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.zipCode" type="text" placeholder="zipCode" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.ss" type="text" placeholder="ss" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.corpName" type="text" placeholder="corpName" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.ein" type="text" placeholder="ein" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <input v-model="dispatchModel.created" type="text" placeholder="created" class="form-control">
                </div>
            </div>
            <div class="col-sm-1">
                <div class="form-group">
                    <input v-model="dispatchModel.status" type="text" placeholder="status" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <button class="btn btn-w-m btn-primary" @@click="createDispatch" v-if="!dispatchModel.id">Create Dispatch</button>
            <button class="btn btn-w-m btn-primary" @@click="updateDispatch" v-else>Update Dispatch</button>
            <button class="btn btn-w-m btn-default" @@click="cancel">Cancel</button>
        </div>

    </div>

    <div class="row" v-if="!editing">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <button class="btn btn-default" @@click="newDispatch">Add New Dispatch</button>
                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>
                                <th data-toggle="true">Name</th>
                                <th data-hide="phone">Email</th>
                                <th data-hide="all">Description</th>
                                <th data-hide="phone">Phone</th>
                                <th data-hide="phone,tablet">Rate</th>
                                <th data-hide="phone">Status</th>
                                <th class="text-right" data-sort-ignore="true">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="(dispatch, index) in dispatchs">
                                <td>
                                    {{dispatch.firstName}} - {{dispatch.firstName}}
                                </td>
                                <td>
                                    {{dispatch.email}}
                                </td>
                                <td>
                                    {{dispatch.description}}
                                </td>
                                <td>
                                    {{dispatch.phone1}}
                                </td>
                                <td>
                                    {{dispatch.rate}}
                                </td>
                                <td>
                                    <span class="label label-primary">{{dispatch.status}}</span>
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <button class="btn-white btn btn-xs" @@click="editBroker(dispatch.id, index)">Edit</button>
                                        <button class="btn-white btn btn-xs" @@click="deleteBroker(dispatch.id, index)">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/admin/dispatches.js"></script>
}